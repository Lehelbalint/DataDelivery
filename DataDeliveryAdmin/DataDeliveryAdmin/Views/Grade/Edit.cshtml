@model DataDeliveryAdmin.Models.SingleGradeViewModel
@{
}


<h1>Jegy modósitása</h1>
<form  asp-action="Edit" class="mt-5">
    <div asp-asp-validation-summary="ModeOnly" class="text-danger"></div>
    <div class="mb-3">
        <label   class="form-label">Jegy:</label>
        <input type="number"  required asp-for="Data.Attributes.Grade" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Százalék:</label>
        <input type="number" required asp-for="Data.Attributes.Percantage"  class="form-control" >
    </div>
    <div class="mb-3">
        <label class="form-label">Dátum:</label>
        <input type="date" required asp-for="Data.Attributes.Date"  class="form-control">
    </div>
    <input type="hidden" asp-for="Data.Id" />
    <input type="hidden" asp-for="Data.Attributes.Final" />
    <button type="submit" class="btn btn-primary">Modósitás</button>
</form>
